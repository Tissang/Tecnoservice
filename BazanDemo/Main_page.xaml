<Page x:Class="BazanDemo.Main_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BazanDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main_page" Background="White">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Обработка заявки" VerticalAlignment="Top" FontSize="15"/>
        <Button Content="Создать заявку" x:Name="Create_order_button" FontSize="35" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Width="362" Click="Create_order_button_Click"/>
        <Button Content="Редактировать заявку" x:Name="Work_order_button" FontSize="35" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Width="362" Click="Work_order_button_Click"/>
        <Button Content="Список заявок" x:Name="Reports_button" FontSize="35" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Width="362" Click="Reports_button_Click"/>
        <Button Content="Выйти" x:Name="Exit_button" FontSize="35" HorizontalAlignment="Center" Margin="0,339,0,0" VerticalAlignment="Top" Width="362" Click="Exit_button_Click"/>

    </Grid>
</Page>
