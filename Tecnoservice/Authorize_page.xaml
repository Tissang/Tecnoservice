<Page x:Class="Tecnoservice.Authorize_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tecnoservice"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Authorize_page"
      Background="#f3f5f9">

    <Grid>
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,145,0,0" FontSize="30" x:Name="authLabel" Foreground="#4898d1"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите логин" FontSize="22"/>
            <TextBox x:Name="loginBox" Width="200"  Margin="0,5" FontSize="22" BorderBrush="#bababa"/>
            <TextBlock Text="Введите пароль" FontSize="22" Margin="0,10"/>
            <PasswordBox x:Name="passwordBox" Width="200" FontSize="22" BorderBrush="#bababa"/>
        </StackPanel>
        <Button Content="Вход" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,438,0,0" x:Name="loginButton" FontSize="28" Background="#4898d1" Foreground="#ffffff" BorderThickness="0" Click="loginButton_Click"/>
        <Image Margin="390,-9,386,468" Source="/Image1.png" Stretch="None"/>
    </Grid>
</Page>
